<?xml version="1.0"?>
<oggetti>
    <oggetto nome="Barile">
        <classe>TriggerableItem</classe>
        <descrizione>Un barile scemo come basile</descrizione>
        <canUse>false</canUse>
        <directlyTriggered>false</directlyTriggered>
        <onTrigger>
            <effetto>src/main/resources/scenari/esplosioneBarile.xml</effetto>
        </onTrigger>
    </oggetto>
    <oggetto nome="Ascensore">
        <classe>DoorLike</classe>
        <descrizione>Un ascensore per salire</descrizione>
        <canUse>false</canUse>
        <isOpen>false</isOpen>
        <isLocked>true</isLocked>
        <onOpen>
            <mode>once</mode>
            <effetto>src/main/resources/scenari/fine.xml</effetto>
        </onOpen>
    </oggetto>
    <oggetto nome="Tappeto">
        <classe>Item</classe>
        <descrizione>Un tappeto dalla forma strana</descrizione>
        <canUse>true</canUse>
        <onUse>
            <actionName>Solleva</actionName>
            <effetto>src/main/resources/scenari/tappetoUse.xml</effetto>
        </onUse>
    </oggetto>
    <oggetto nome="Accendino">
        <classe>PickupableItem</classe>
        <descrizione>Un accendino per dare fuoco a Spicoli</descrizione>
        <onUseWith>
            <target>Barile</target>
            <method>trigger</method>
        </onUseWith>
        <canUse>false</canUse>
    </oggetto>
    <oggetto nome="Chiave">
        <classe>PickupableItem</classe>
        <descrizione>Un cacciavite per i più belli</descrizione>
        <onUseWith>
            <target>Ascensore</target>
            <method>unlock</method>
        </onUseWith>
        <canUse>false</canUse>
    </oggetto>
    <oggetto nome="Armadio">
        <classe>Container</classe>
        <descrizione>Un armadio strambo come Armando</descrizione>
        <canUse>false</canUse>
        <onOpen>
            <mode>once</mode>
            <effetto>src/main/resources/scenari/apri_armadio.xml</effetto>
        </onOpen>
    </oggetto>
    <oggetto nome="Ciambella">
        <classe>PickupableItem</classe>
        <descrizione>Una ciambella fluorescente. Non la mangerei.</descrizione>
        <canUse>false</canUse>
    </oggetto>
    <oggetto nome="Pulsante rosso">
        <classe>PickupableItem</classe>
        <descrizione>Usare solo se si è in serio pericolo di vita.</descrizione>
        <canUse>true</canUse>
        <onUse>
            <actionName>Premi</actionName>
            <effetto>src/main/resources/scenari/arrivoNicolas.xml</effetto>
        </onUse>
    </oggetto>
    <oggetto nome="AscensoreMIST">
        <classe>DoorLike</classe>
        <descrizione>Un ascensore arancione</descrizione>
        <canUse>false</canUse>
        <isOpen>false</isOpen>
        <isLocked>true</isLocked>
    </oggetto>
    <oggetto nome="ArmadioMIST">
        <classe>Container</classe>
        <descrizione>Un armadio bloccato, bisogna usare la forza</descrizione>
        <canUse>false</canUse>
        <onOpen>
            <mode>once</mode>
            <effetto>src/main/resources/scenari/apri_armadioMIST.xml</effetto>
        </onOpen>
    </oggetto>
    <oggetto nome="Filamento">
        <classe>PickupableItem</classe>
        <descrizione>Filamento per stampanti 3D.</descrizione>
        <canUse>false</canUse>
    </oggetto>
    <oggetto nome="Registratore">
        <classe>PickupableItem</classe>
        <descrizione>Un registratore vuoto.</descrizione>
        <canUse>false</canUse>
    </oggetto>
    <oggetto nome="Guanto">
        <classe>PickupableItem</classe>
        <descrizione>Un guanto robotico.</descrizione>
        <canUse>false</canUse>
    </oggetto>
    <oggetto nome="AscensoreALU">
        <classe>DoorLike</classe>
        <descrizione>Un ascensore blue</descrizione>
        <canUse>false</canUse>
        <isOpen>false</isOpen>
        <isLocked>true</isLocked>
    </oggetto>
</oggetti>
